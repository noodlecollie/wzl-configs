{
    "telemetry.telemetryLevel": "off",

    "editor.renderWhitespace": "boundary",
    "editor.insertSpaces": false,
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "editor.cursorBlinking": "smooth",
    "editor.dragAndDrop": false,
    "editor.rulers": [ 120 ],
    "editor.smoothScrolling": true,
    "editor.selectionClipboard": false, // No middle click paste on Linux
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.snippetSuggestions": "none", // Autocompleting "if...else" drives me mad
    "editor.autoSurround": "never",
    "editor.inlayHints.enabled": "off",

    // If I've cloned a repo, I trust the code. 99% of the time I work with
    // compiled languaged anyway, so this can get lost.
    "security.workspace.trust.enabled": false,

    "window.titleBarStyle": "custom",

    "diffEditor.ignoreTrimWhitespace": false,

    "workbench.editor.openPositioning": "last",
    "workbench.statusBar.feedback.visible": false,

    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,

    "terminal.integrated.confirmOnExit": "hasChildProcesses",
    "terminal.integrated.enableBell": true,
    "terminal.integrated.tabs.hideCondition": "never",

    "git.promptToSaveFilesBeforeCommit": "always",
    "git.inputValidation": "off",
    "git.confirmSync": false,

    "C_Cpp.default.defines": [ "DEBUG", "_DEBUG" ],
    "C_Cpp.default.cppStandard": "c++11",
    "C_Cpp.default.cStandard": "c99",

    "cmake.configureOnOpen": false,

    "extensions.ignoreRecommendations": true,

    // That's the last time I spend 10 minutes in a headless panic because
    // some extension decided to update to a new, buggier version underneath my feet.
    "extensions.autoUpdate": false
}
